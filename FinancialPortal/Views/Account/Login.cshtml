@using FinancialPortal.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Sign in";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title> 
        @ViewBag.Title - MoneyApp
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/Content/material-kit.css" rel="stylesheet" />
</head>

<body class="login-page sidebar-collapse">
    <div class="page-header header-filter" style="background-image: url('/Images/money.jpg'); background-size: cover; background-position: top center;" filter-color="green">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
                    <div class="card card-login card-hidden">
                        <div class="card-header text-center card-header-transparent" style="background: transparent; margin-top: -10px;">
                            <h3 class="card-title text-success">MoneyApp</h3>
                        </div>
                        @using (Html.BeginForm())
                        {
                            <div class="card-body justify-content-center">
                                <p class="text-muted text-center">
                                    A tool for managing your finances.
                                </p>
                                <div class="text-center">
                                    @Html.ActionLink("Don't have an account? Sign up here.", "Register", "Account", null, htmlAttributes: new { @class = "text-center text-success" })
                                </div>
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="bmd-form-group has-success">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text">
                                                <i class="material-icons text-success">
                                                    email
                                                </i>
                                            </label>
                                        </div>
                                        @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", placeholder = "Email" })
                                    </div>
                                </div>
                                <div class="bmd-form-group has-success">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text">
                                                <i class="material-icons text-success">
                                                    lock_outline
                                                </i>
                                            </label>
                                        </div>
                                        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control has-success", placeholder = "Password" })
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center justify-content-center">
                                <button type="submit" class="btn btn-round btn-success">Sign In</button>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="row">
                <div class=" col-md-10 mr-auto ml-auto text-center text-white">
                    @Html.ActionLink("Forget your password?", "ForgotPassword", "Account", null, htmlAttributes: new { @class = "text-white"})
                </div>
            </div>
        </div>
        <footer class="footer" style="z-index: 5">
            <div class="container">
                <nav class="float-left">
                    <ul>
                        <li>
                            <a target="_blank" href="https://www.github.com/drrky-g/FinancialPortal">
                                View Code
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright float-right">
                    &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script> - Derrick Gordon
                </div>
            </div>
        </footer>
    </div>
    <!--   Core JS Files   -->
    <script src="~/Scripts/Material/jquery.min.js"></script>
    <script src="~/Scripts/Material/popper.min.js"></script>
    <script src="~/Scripts/Material/bootstrap-material-design.min.js"></script>
    <script src="~/Scripts/Material/moment.min.js"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="~/Scripts/Material/material-kit.js"></script>

