@model FinancialPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @ViewBag.Title - MoneyApp
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    @Styles.Render("~/bundles/Content/css")
</head>

<body class="signup-page header-filter" filter-color="green" style="background-image: url(/Images/money.jpg); background-size: cover; background-position: top center;">
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-auto mr-auto text-left">
                <h2 class="text-white title">MoneyApp</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 ml-auto mr-auto">
                <div class="card card-signup">
                    <h2 class="text-center text-success"><b>Register</b></h2>
                    <div class="card-body">
                        <!-- key points -->
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="info info-horizontal">
                                    <div class="icon icon-success">
                                        <i class="material-icons">timeline</i>
                                    </div>
                                    <div class="description">
                                        <h4 class="info-title">Track Your Finances</h4>
                                        <ul>
                                            <li>Create Budgets</li>
                                            <li>Use Multiple Bank Accounts</li>
                                            <li>Manage an Entire Household</li>
                                            <li>Catagorize Your Expenses</li>
                                            <li>Allows Income and Expense Tracking</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="info info-horizontal">
                                    <div class="icon icon-success">
                                        <i class="material-icons">group</i>
                                    </div>
                                    <div class="description">
                                        <h4 class="info-title">Include Family and Friends</h4>
                                        <ul>
                                            <li>Create Your Own Household</li>
                                            <li>Manage Multiple Households</li>
                                            <li>Send Invites to Friends and Family</li>
                                            <li>Everyone Can Contribute</li>
                                        </ul>
                                    </div>
                                </div>
                                <hr />
                                <div class="info info-horizontal">
                                    <div class="description">
                                        <h4 class="info-title">
                                            Have An Account?
                                        </h4>
                                        <p class="description">
                                            @Html.ActionLink("Click here to sign in.", "LogIn", "Account", null, htmlAttributes: new { @class = "text-success" })
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!-- form -->
                            <div class="col-md-5 mr-auto">
                                @using (Html.BeginForm())
                                {
                                    Html.AntiForgeryToken();
                                    Html.ValidationSummary("", new { @class = "text-center" });
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">face</i>
                                                </label>
                                            </div>
                                            @Html.TextBoxFor(m => m.FirstName, htmlAttributes: new { @class = "form-control has-success", placeholder = "First Name" })
                                        </div>
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">face</i>
                                                </label>
                                            </div>
                                            @Html.TextBoxFor(m => m.LastName, htmlAttributes: new { @class = "form-control", placeholder = "Last Name" })
                                        </div>
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">face</i>
                                                </label>
                                            </div>
                                            @Html.TextBoxFor(m => m.Alias, htmlAttributes: new { @class = "form-control", placeholder = "Nickname" })
                                        </div>
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">photo</i>
                                                </label>
                                            </div>
                                            @Html.TextBoxFor(m => m.AvatarPath, htmlAttributes: new { @class = "form-control", placeholder = "Profile Picture" })
                                        </div>
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">email</i>
                                                </label>
                                            </div>
                                            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", placeholder = "Email" })
                                        </div>
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">lock</i>
                                                </label>
                                            </div>
                                            @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", placeholder = "Password" })
                                        </div>
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text">
                                                    <i class="material-icons text-success">lock</i>
                                                </label>
                                            </div>
                                            @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control", placeholder = "Confirm Password" })
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success btn-round">Sign Up</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <nav class="float-left">
                <ul>
                    <li>
                        <a target="_blank" href="https://www.github.com/drrky-g/FinancialPortal">
                            View Code
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="copyright float-right">
                &copy;
                <script>document.write(new Date().getFullYear())</script> - Derrick Gordon
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/Scripts")
    @Scripts.Render("~/bundles/jqueryval")
    <script async defer src="https://buttons.github.io/buttons.js"></script>

