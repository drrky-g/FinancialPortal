@using FinancialPortal.Models;
@model ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/Images/apple-icon.png">
    <link rel="icon" type="image/png" href="/Images/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @ViewBag.Title - MoneyApp
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!-- Fonts and icons -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/Content/material-kit.css" rel="stylesheet" />
</head>

<body class="error-page">
    <div class="page-header error-page header-filter" style="background-image: url('/Images/bg0.jpg')" filter-color="red" >
        <div class="container">
            <div class="row">
                <div class="col-md-12 justify-content-center">
                    <h1><b>Change Password</b></h1>
                    <h4>Fill out the form below to change your password.</h4>
                    @using (Html.BeginForm())
                    {
                        <div class="card justify-content-center rounded" style="background: white;">
                            <div class="card-body">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class="text-danger"})
                                <div class="bmd-form-group has-danger">
                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.OldPassword, htmlAttributes: new { @class = "form-control", placeholder = "Old Password" })
                                    </div>
                                </div>
                                <div class="bmd-form-group has-danger">
                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.NewPassword, htmlAttributes: new { @class = "form-control", placeholder = "New Password" })
                                    </div>
                                </div>
                                <div class="bmd-form-group has-danger">
                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control", placeholder = "Confirm Password" })
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer justify-content-center">
                                <div class="row">
                                    <button type="submit" class="btn btn-link btn-danger">Change Password</button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ActionLink("Return to Dashboard", "Index", "Home", null, htmlAttributes: new { @class = "btn text-white btn-link" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/Scripts/Material/jquery.min.js"></script>
    <script src="~/Scripts/Material/popper.min.js"></script>
    <script src="~/Scripts/Material/bootstrap-material-design.min.js"></script>
    <script src="~/Scripts/Material/moment.min.js"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="~/Scripts/Material/material-kit.js"></script>
    <!--
